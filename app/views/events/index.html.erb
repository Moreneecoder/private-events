<table>
    <thead>
        <strong>PREVIOUS EVENTS</strong>
    </thead>
    <tbody>
        <tr>
            <th>Description</th>
            <th>Location</th>
            <th colspan="3">Date</th>
            <th colspan="3">Creator</th>
        </tr>

        <% @events.past.each do |event| %>
            <tr>
                <td><%= event.description %></td>
                <td><%= event.location %></td>
                <td colspan="3"><%= event.date %></td>
                <td colspan="3"><%= event.creator.name %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<table>
    <thead>
        <strong>UPCOMING EVENTS</strong>
    </thead>
    <tbody>
        <tr>
            <th>Description</th>
            <th>Location</th>
            <th colspan="3">Date</th>
            <th colspan="3">Creator</th>
        </tr>

        <% @events.upcoming.each do |event| %>
            <tr>
                <td><%= event.description %></td>
                <td><%= event.location %></td>
                <td colspan="3"><%= event.date %></td>
                <td colspan="3"><%= event.creator.name %></td>
            </tr>
        <% end %>
    </tbody>
</table>

