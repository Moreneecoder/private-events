<p><%= flash[:notice] %></p>
<h1>Hey, <%= @user[:name] %>!</h1>

<table>
    <thead>
        <strong>YOUR EVENTS</strong>
    </thead>
    <tbody>
        <tr>
            <th>Description</th>
            <th>Location</th>
            <th colspan="3">Date</th>
        </tr>

        <% @user_events.each do |event| %>
            <tr>
                <td><%= event.description %></td>
                <td><%= event.location %></td>
                <td><%= event.date %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Create Event', new_event_path %> | <%= link_to 'logout', users_logout_path%>
